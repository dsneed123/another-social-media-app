<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            max-width: 100vw;
            overflow-x: hidden;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: #000;
            color: #fff;
            padding-bottom: 70px;
        }

        /* Header */
        .header {
            position: sticky;
            top: 0;
            width: 100%;
            max-width: 100vw;
            background: #000;
            border-bottom: 1px solid #1a1a1a;
            padding: 15px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            z-index: 100;
            box-sizing: border-box;
        }

        .header h1 {
            font-size: 20px;
            font-weight: 600;
        }

        .header-btn {
            background: none;
            border: none;
            color: #fff;
            font-size: 24px;
            cursor: pointer;
            padding: 5px;
            min-width: 44px;
            min-height: 44px;
        }

        .header-btn:hover {
            color: #B39FFF;
        }

        /* Profile Info */
        .profile-section {
            padding: 20px;
        }

        .profile-header {
            display: flex;
            align-items: flex-start;
            gap: 20px;
            margin-bottom: 20px;
        }

        .profile-avatar-large {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: linear-gradient(135deg, #B39FFF, #9d7fee);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 32px;
            font-weight: bold;
            flex-shrink: 0;
        }

        .profile-info {
            flex: 1;
        }

        .profile-username {
            font-size: 24px;
            font-weight: 600;
            margin-bottom: 15px;
        }

        .profile-stats {
            display: flex;
            gap: 20px;
            margin-bottom: 15px;
        }

        .stat {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .stat-number {
            font-size: 18px;
            font-weight: 600;
        }

        .stat-label {
            font-size: 12px;
            color: #888;
        }

        .profile-actions {
            display: flex;
            gap: 10px;
        }

        .btn {
            padding: 8px 20px;
            min-height: 44px;
            border-radius: 8px;
            border: none;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s;
        }

        .btn-primary {
            background: #B39FFF;
            color: #000;
        }

        .btn-primary:hover {
            background: #9d85ff;
        }

        .btn-secondary {
            background: #2a2a2a;
            color: #fff;
            border: 1px solid #333;
        }

        .btn-secondary:hover {
            background: #333;
        }

        .profile-about {
            margin-top: 15px;
            line-height: 1.5;
            color: #e0e0e0;
        }

        .profile-link {
            margin-top: 10px;
        }

        .profile-link a {
            color: #B39FFF;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .profile-link a:hover {
            text-decoration: underline;
        }

        /* Stories Grid */
        .stories-grid-section {
            padding: 0 20px 20px;
        }

        .section-title {
            font-size: 14px;
            font-weight: 600;
            color: #888;
            margin-bottom: 15px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .stories-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 2px;
        }

        .story-grid-item {
            aspect-ratio: 9/16;
            position: relative;
            cursor: pointer;
            overflow: hidden;
            background: #1a1a1a;
        }

        .story-grid-item img,
        .story-grid-item video {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .story-grid-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(to bottom, transparent 60%, rgba(0,0,0,0.8));
            display: flex;
            align-items: flex-end;
            padding: 10px;
            opacity: 0;
            transition: opacity 0.2s;
        }

        .story-grid-item:hover .story-grid-overlay {
            opacity: 1;
        }

        .story-stats {
            display: flex;
            gap: 10px;
            font-size: 12px;
        }

        .story-stat {
            display: flex;
            align-items: center;
            gap: 4px;
        }

        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #666;
        }

        .empty-state i {
            font-size: 48px;
            margin-bottom: 15px;
            display: block;
        }

        /* Edit Profile Modal */
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.9);
            z-index: 1000;
            align-items: center;
            justify-content: center;
            padding: 20px;
            box-sizing: border-box;
        }

        .modal.show {
            display: flex;
        }

        .modal-content {
            background: #1a1a1a;
            border-radius: 12px;
            width: 100%;
            max-width: min(500px, 90vw);
            padding: 25px;
            box-sizing: border-box;
        }

        .modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .modal-title {
            font-size: 20px;
            font-weight: 600;
        }

        .modal-close {
            background: none;
            border: none;
            color: #fff;
            font-size: 28px;
            cursor: pointer;
            min-width: 44px;
            min-height: 44px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            display: block;
            font-size: 14px;
            font-weight: 500;
            margin-bottom: 8px;
            color: #e0e0e0;
        }

        .form-input,
        .form-textarea {
            width: 100%;
            max-width: 100%;
            background: #2a2a2a;
            border: 1px solid #333;
            border-radius: 8px;
            padding: 12px;
            color: #fff;
            font-size: 16px;
            font-family: inherit;
            box-sizing: border-box;
        }

        .form-textarea {
            resize: vertical;
            min-height: 100px;
        }

        .form-input:focus,
        .form-textarea:focus {
            outline: none;
            border-color: #B39FFF;
        }

        .char-count {
            font-size: 12px;
            color: #666;
            text-align: right;
            margin-top: 5px;
        }

        .modal-actions {
            display: flex;
            gap: 10px;
            justify-content: flex-end;
        }

        /* Bottom Navigation */
        .bottom-nav {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            width: 100%;
            max-width: 100vw;
            background: #2c2c2c;
            border-top: 1px solid #1a1a1a;
            display: flex;
            justify-content: space-around;
            padding: 10px 0;
            z-index: 150;
            box-sizing: border-box;
        }

        .bottom-nav button {
            background: none;
            border: none;
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 4px;
            padding: 8px;
            min-height: 44px;
            cursor: pointer;
            color: #ffffff;
            transition: all 0.2s;
        }

        .bottom-nav button.active {
            color: #B39FFF;
        }

        .bottom-nav button i {
            font-size: 22px;
        }

        .bottom-nav button .label {
            font-size: 11px;
            font-weight: 500;
        }

        .loading {
            text-align: center;
            padding: 40px;
            color: #666;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <div class="header">
        <h1 id="profileUsername">Profile</h1>
        <button class="header-btn" onclick="openSettings()">
            <i class="bi bi-gear"></i>
        </button>
    </div>

    <!-- Profile Section -->
    <div class="profile-section">
        <div class="profile-header">
            <div class="profile-avatar-large" id="profileAvatar">U</div>
            <div class="profile-info">
                <div class="profile-username" id="usernameDisplay">username</div>
                <div class="profile-stats">
                    <div class="stat">
                        <span class="stat-number" id="storyCount">0</span>
                        <span class="stat-label">Stories</span>
                    </div>
                    <div class="stat">
                        <span class="stat-number" id="followerCount">0</span>
                        <span class="stat-label">Followers</span>
                    </div>
                    <div class="stat">
                        <span class="stat-number" id="followingCount">0</span>
                        <span class="stat-label">Following</span>
                    </div>
                </div>
                <div class="profile-actions" id="profileActions">
                    <button class="btn btn-primary" onclick="openEditProfile()">
                        <i class="bi bi-pencil"></i> Edit Profile
                    </button>
                </div>
            </div>
        </div>
        
        <div class="profile-about" id="profileAbout"></div>
        <div class="profile-link" id="profileLinkContainer"></div>
    </div>

    <!-- Stories Grid -->
    <div class="stories-grid-section">
        <div class="section-title">
            <i class="bi bi-grid-3x3"></i> Stories
        </div>
        <div class="stories-grid" id="storiesGrid">
            <div class="loading">Loading stories...</div>
        </div>
    </div>

    <!-- Edit Profile Modal -->
    <div class="modal" id="editModal">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Edit Profile</h2>
                <button class="modal-close" onclick="closeEditProfile()">&times;</button>
            </div>
            
            <form onsubmit="saveProfile(event)">
                <div class="form-group">
                    <label class="form-label">About</label>
                    <textarea 
                        class="form-textarea" 
                        id="aboutInput" 
                        placeholder="Tell us about yourself..."
                        maxlength="150"
                        oninput="updateCharCount(this, 'aboutCount', 150)"></textarea>
                    <div class="char-count">
                        <span id="aboutCount">0</span>/150
                    </div>
                </div>
                
                <div class="form-group">
                    <label class="form-label">Link</label>
                    <input 
                        type="url" 
                        class="form-input" 
                        id="linkInput" 
                        placeholder="https://example.com"
                        maxlength="100">
                </div>
                
                <div class="modal-actions">
                    <button type="button" class="btn btn-secondary" onclick="closeEditProfile()">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Bottom Navigation -->
    <nav class="bottom-nav">
        <button onclick="navigateTo('chats')">
            <i class="bi bi-chat-dots-fill"></i>
            <span class="label">Chat</span>
        </button>
        <button onclick="navigateTo('stories')">
            <i class="bi bi-circle"></i>
            <span class="label">Stories</span>
        </button>
        <button onclick="navigateTo('discover')">
            <i class="bi bi-search"></i>
            <span class="label">Discover</span>
        </button>
        <button onclick="navigateTo('notifications')">
            <i class="bi bi-bell"></i>
            <span class="label">Notifications</span>
        </button>
        <button class="active" onclick="navigateTo('profile')">
            <i class="bi bi-person-fill"></i>
            <span class="label">Profile</span>
        </button>
        <button onclick="navigateTo('settings')">
            <i class="bi bi-gear-fill"></i>
            <span class="label">Settings</span>
        </button>
    </nav>

    <script>
        const currentUser = JSON.parse(localStorage.getItem('user') || '{}');
        const currentUserId = currentUser.id;
        let profileData = null;
        let isOwnProfile = true;

        // Get user ID from URL or use current user
        const urlParams = new URLSearchParams(window.location.search);
        const viewingUserId = urlParams.get('user_id') || currentUserId;
        isOwnProfile = viewingUserId === currentUserId;

        // Load profile on page load
        async function loadProfile() {
            try {
                const response = await fetch(`/api/profile/${viewingUserId}/${currentUserId}`);
                if (response.ok) {
                    profileData = await response.json();
                    renderProfile();
                }
            } catch (error) {
                console.error('Error loading profile:', error);
            }
        }

        function renderProfile() {
            // Update avatar
            document.getElementById('profileAvatar').textContent = 
                (profileData.username || 'U')[0].toUpperCase();
            
            // Update username
            document.getElementById('profileUsername').textContent = 
                `@${profileData.username}`;
            document.getElementById('usernameDisplay').textContent = 
                `@${profileData.username}`;
            
            // Update stats
            document.getElementById('storyCount').textContent = profileData.story_count || 0;
            document.getElementById('followerCount').textContent = profileData.follower_count || 0;
            document.getElementById('followingCount').textContent = profileData.following_count || 0;
            
            // Update about
            if (profileData.about) {
                document.getElementById('profileAbout').textContent = profileData.about;
                document.getElementById('profileAbout').style.display = 'block';
            } else {
                document.getElementById('profileAbout').style.display = 'none';
            }
            
            // Update link
            const linkContainer = document.getElementById('profileLinkContainer');
            if (profileData.profile_link) {
                linkContainer.innerHTML = `
                    <a href="${escapeHtml(profileData.profile_link)}" target="_blank">
                        <i class="bi bi-link-45deg"></i>
                        ${escapeHtml(profileData.profile_link)}
                    </a>
                `;
                linkContainer.style.display = 'block';
            } else {
                linkContainer.style.display = 'none';
            }
            
            // Update action buttons
            const actionsDiv = document.getElementById('profileActions');
            if (isOwnProfile) {
                actionsDiv.innerHTML = `
                    <button class="btn btn-primary" onclick="openEditProfile()">
                        <i class="bi bi-pencil"></i> Edit Profile
                    </button>
                `;
            } else {
                const followBtn = profileData.is_following 
                    ? '<button class="btn btn-secondary" onclick="unfollowUser()">Following</button>'
                    : '<button class="btn btn-primary" onclick="followUser()">Follow</button>';
                actionsDiv.innerHTML = followBtn;
            }
        }

        // Load user's stories
        async function loadStories() {
            try {
                const response = await fetch(`/api/profile/${viewingUserId}/stories`);
                if (response.ok) {
                    const stories = await response.json();
                    renderStories(stories);
                }
            } catch (error) {
                console.error('Error loading stories:', error);
            }
        }

        function renderStories(stories) {
            const grid = document.getElementById('storiesGrid');
            
            if (stories.length === 0) {
                grid.innerHTML = `
                    <div class="empty-state" style="grid-column: 1 / -1;">
                        <i class="bi bi-camera"></i>
                        <p>No stories yet</p>
                    </div>
                `;
                return;
            }
            
            grid.innerHTML = stories.map(story => {
                const mediaElement = story.media_type === 'video'
                    ? `<video src="${story.media_url}"></video>`
                    : `<img src="${story.media_url}" alt="Story">`;
                
                return `
                    <div class="story-grid-item" onclick="openStory('${story.id}')">
                        ${mediaElement}
                        <div class="story-grid-overlay">
                            <div class="story-stats">
                                <span class="story-stat">
                                    <i class="bi bi-eye"></i>
                                    ${story.view_count || 0}
                                </span>
                                <span class="story-stat">
                                    <i class="bi bi-heart"></i>
                                    ${story.like_count || 0}
                                </span>
                                <span class="story-stat">
                                    <i class="bi bi-chat"></i>
                                    ${story.comment_count || 0}
                                </span>
                            </div>
                        </div>
                    </div>
                `;
            }).join('');
        }

        function openStory(storyId) {
            window.location.href = `/stories.html?story_id=${storyId}`;
        }

        // Edit profile functions
        function openEditProfile() {
            if (!isOwnProfile) return;
            
            document.getElementById('aboutInput').value = profileData.about || '';
            document.getElementById('linkInput').value = profileData.profile_link || '';
            updateCharCount(document.getElementById('aboutInput'), 'aboutCount', 150);
            
            document.getElementById('editModal').classList.add('show');
        }

        function closeEditProfile() {
            document.getElementById('editModal').classList.remove('show');
        }

        async function saveProfile(event) {
            event.preventDefault();
            
            const about = document.getElementById('aboutInput').value.trim();
            const link = document.getElementById('linkInput').value.trim();
            
            try {
                const response = await fetch(`/api/profile/${currentUserId}/update`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        about: about || null,
                        profile_link: link || null
                    })
                });
                
                if (response.ok) {
                    closeEditProfile();
                    await loadProfile();
                }
            } catch (error) {
                console.error('Error updating profile:', error);
                alert('Failed to update profile');
            }
        }

        function updateCharCount(input, countId, max) {
            document.getElementById(countId).textContent = input.value.length;
        }

        // Follow/unfollow
        async function followUser() {
            try {
                const response = await fetch(`/api/social/follow/${currentUserId}/${viewingUserId}`, {
                    method: 'POST'
                });
                if (response.ok) {
                    await loadProfile();
                }
            } catch (error) {
                console.error('Error following user:', error);
            }
        }

        async function unfollowUser() {
            try {
                const response = await fetch(`/api/social/unfollow/${currentUserId}/${viewingUserId}`, {
                    method: 'POST'
                });
                if (response.ok) {
                    await loadProfile();
                }
            } catch (error) {
                console.error('Error unfollowing user:', error);
            }
        }

        // Navigation
        function navigateTo(page) {
            const routes = {
                chats: '/basic-chat.html',
                stories: '/stories.html',
                discover: '/discover.html',
                notifications: '/notifications.html',
                profile: '/profile.html',
                settings: '/settings.html'
            };
            if (routes[page]) {
                window.location.href = routes[page];
            }
        }

        function openSettings() {
            window.location.href = '/settings.html';
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        // Close modal on background click
        document.getElementById('editModal').addEventListener('click', (e) => {
            if (e.target.id === 'editModal') {
                closeEditProfile();
            }
        });

        // Initialize
        if (currentUserId && viewingUserId) {
            loadProfile();
            loadStories();
        } else {
            window.location.href = '/login.html';
        }
    </script>
</body>
</html>
