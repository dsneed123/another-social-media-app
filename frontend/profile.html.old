<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            max-width: 100vw;
            overflow-x: hidden;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(180deg, #000 0%, #0a0a0a 100%);
            color: #fff;
            padding-bottom: 80px;
        }

        /* Header */
        .header {
            position: sticky;
            top: 0;
            width: 100%;
            max-width: 100vw;
            background: linear-gradient(180deg, rgba(0,0,0,0.98) 0%, rgba(0,0,0,0.95) 100%);
            backdrop-filter: blur(20px);
            border-bottom: 1px solid rgba(179, 159, 255, 0.15);
            padding: 16px 22px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            z-index: 100;
            box-sizing: border-box;
            box-shadow: 0 2px 12px rgba(0, 0, 0, 0.5);
        }

        .header h1 {
            font-size: 22px;
            font-weight: 800;
            letter-spacing: -0.5px;
        }

        .header-btn {
            background: rgba(179, 159, 255, 0.15);
            border: none;
            color: #fff;
            font-size: 24px;
            cursor: pointer;
            padding: 10px;
            min-width: 48px;
            min-height: 48px;
            border-radius: 14px;
            transition: all 0.2s ease;
        }

        .header-btn:hover {
            background: rgba(179, 159, 255, 0.25);
            color: #B39FFF;
            transform: scale(1.05);
        }

        .header-btn:active {
            transform: scale(0.95);
        }

        /* Profile Info */
        .profile-section {
            padding: 24px 22px;
        }

        .profile-header {
            display: flex;
            align-items: flex-start;
            gap: 22px;
            margin-bottom: 24px;
        }

        .profile-avatar-large {
            width: 88px;
            height: 88px;
            border-radius: 50%;
            background: linear-gradient(135deg, #B39FFF, #9d7fee);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 36px;
            font-weight: 800;
            flex-shrink: 0;
            box-shadow: 0 8px 24px rgba(179, 159, 255, 0.4), 0 0 0 4px rgba(179, 159, 255, 0.1);
            transition: all 0.3s ease;
        }

        .profile-avatar-large:hover {
            transform: scale(1.05);
        }

        .profile-info {
            flex: 1;
        }

        .profile-username {
            font-size: 26px;
            font-weight: 800;
            margin-bottom: 18px;
            letter-spacing: -0.5px;
        }

        .profile-stats {
            display: flex;
            gap: 24px;
            margin-bottom: 18px;
        }

        .stat {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 12px 18px;
            background: rgba(179, 159, 255, 0.1);
            border-radius: 14px;
            border: 1px solid rgba(179, 159, 255, 0.2);
            transition: all 0.2s ease;
            cursor: pointer;
        }

        .stat:hover {
            background: rgba(179, 159, 255, 0.15);
            transform: translateY(-2px);
        }

        .stat-number {
            font-size: 20px;
            font-weight: 800;
            color: #B39FFF;
        }

        .stat-label {
            font-size: 12px;
            color: #aaa;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-top: 4px;
        }

        .profile-actions {
            display: flex;
            gap: 12px;
            flex-wrap: wrap;
        }

        .btn {
            padding: 12px 24px;
            min-height: 48px;
            border-radius: 14px;
            border: none;
            font-size: 15px;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.2s cubic-bezier(0.34, 1.56, 0.64, 1);
            letter-spacing: 0.3px;
        }

        .btn-primary {
            background: linear-gradient(135deg, #B39FFF, #9d7fee);
            color: #fff;
            box-shadow: 0 4px 16px rgba(179, 159, 255, 0.4);
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(179, 159, 255, 0.5);
        }

        .btn-primary:active {
            transform: translateY(0);
        }

        .btn-secondary {
            background: rgba(255, 255, 255, 0.08);
            color: #fff;
            border: 2px solid rgba(255, 255, 255, 0.15);
        }

        .btn-secondary:hover {
            background: rgba(255, 255, 255, 0.12);
            border-color: rgba(179, 159, 255, 0.3);
        }

        .profile-about {
            margin-top: 18px;
            line-height: 1.6;
            font-size: 15px;
            font-weight: 500;
            color: #ddd;
            background: rgba(255, 255, 255, 0.05);
            padding: 16px;
            border-radius: 14px;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        /* Stories Grid */
        .stories-grid {
            padding: 0 22px 24px;
        }

        .stories-grid h2 {
            font-size: 20px;
            font-weight: 800;
            margin-bottom: 18px;
            letter-spacing: -0.3px;
        }

        .grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 6px;
        }

        .grid-item {
            aspect-ratio: 9/16;
            background: linear-gradient(135deg, #1a1a1a, #2a2a2a);
            border-radius: 10px;
            overflow: hidden;
            position: relative;
            cursor: pointer;
            transition: all 0.2s ease;
            border: 1px solid rgba(255, 255, 255, 0.05);
        }

        .grid-item:hover {
            transform: scale(1.03);
            border-color: rgba(179, 159, 255, 0.3);
            box-shadow: 0 4px 16px rgba(179, 159, 255, 0.2);
        }

        .grid-item:active {
            transform: scale(0.98);
        }

        .grid-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .grid-item .views {
            position: absolute;
            bottom: 8px;
            left: 8px;
            background: rgba(0, 0, 0, 0.8);
            backdrop-filter: blur(10px);
            padding: 5px 10px;
            border-radius: 8px;
            font-size: 12px;
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #666;
        }

        .empty-state i {
            font-size: 64px;
            margin-bottom: 20px;
            opacity: 0.3;
        }

        .empty-state p {
            font-size: 16px;
            font-weight: 600;
        }

        /* Bottom Navigation */
        .bottom-nav {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            width: 100%;
            max-width: 100vw;
            background: linear-gradient(180deg, transparent 0%, rgba(0,0,0,0.95) 20%, #000 100%);
            backdrop-filter: blur(10px);
            border-top: 1px solid rgba(179, 159, 255, 0.1);
            display: flex;
            justify-content: space-around;
            padding: 10px 0 max(10px, env(safe-area-inset-bottom));
            z-index: 50;
            box-shadow: 0 -2px 20px rgba(0, 0, 0, 0.5);
        }

        .bottom-nav button {
            background: none;
            border: none;
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 5px;
            padding: 8px;
            min-height: 48px;
            cursor: pointer;
            color: rgba(255, 255, 255, 0.6);
            transition: all 0.2s ease;
            border-radius: 12px;
            position: relative;
        }

        .bottom-nav button.active {
            color: #B39FFF;
        }

        .bottom-nav button.active::before {
            content: '';
            position: absolute;
            top: -2px;
            left: 50%;
            transform: translateX(-50%);
            width: 36px;
            height: 3px;
            background: linear-gradient(90deg, #B39FFF, #9d7fee);
            border-radius: 0 0 3px 3px;
            box-shadow: 0 2px 8px rgba(179, 159, 255, 0.5);
        }

        .bottom-nav button:hover {
            color: #fff;
            background: rgba(255, 255, 255, 0.05);
        }

        .bottom-nav button:active {
            transform: scale(0.95);
        }

        .bottom-nav button i {
            font-size: 24px;
        }

        .bottom-nav button span {
            font-size: 11px;
            font-weight: 700;
            letter-spacing: 0.3px;
        }

        /* Mobile Responsive */
        @media (max-width: 480px) {
            .profile-section {
                padding: 20px 16px;
            }

            .profile-header {
                gap: 16px;
            }

            .profile-avatar-large {
                width: 76px;
                height: 76px;
                font-size: 32px;
            }

            .profile-username {
                font-size: 22px;
            }

            .profile-stats {
                gap: 16px;
            }

            .stat {
                padding: 10px 14px;
            }

            .stories-grid {
                padding: 0 16px 20px;
            }

            .grid {
                gap: 4px;
            }
        }

        /* Desktop Enhancements */
        @media (min-width: 768px) {
            body {
                max-width: 600px;
                margin: 0 auto;
                border-left: 1px solid rgba(255, 255, 255, 0.05);
                border-right: 1px solid rgba(255, 255, 255, 0.05);
            }

            .bottom-nav {
                max-width: 600px;
                left: 50%;
                transform: translateX(-50%);
                border-radius: 24px 24px 0 0;
            }

            .grid {
                gap: 8px;
            }
        }
    </style>
</head>
<body>
    <!-- Header -->
    <div class="header">
        <h1 id="profileUsername">Profile</h1>
        <button class="header-btn" onclick="openSettings()">
            <i class="bi bi-gear"></i>
        </button>
    </div>

    <!-- Profile Section -->
    <div class="profile-section">
        <div class="profile-header">
            <div class="profile-avatar-large" id="profileAvatar">U</div>
            <div class="profile-info">
                <div class="profile-username" id="usernameDisplay">username</div>
                <div class="profile-stats">
                    <div class="stat">
                        <span class="stat-number" id="storyCount">0</span>
                        <span class="stat-label">Stories</span>
                    </div>
                    <div class="stat">
                        <span class="stat-number" id="followerCount">0</span>
                        <span class="stat-label">Followers</span>
                    </div>
                    <div class="stat">
                        <span class="stat-number" id="followingCount">0</span>
                        <span class="stat-label">Following</span>
                    </div>
                </div>
                <div class="profile-actions" id="profileActions">
                    <button class="btn btn-primary" onclick="openEditProfile()">
                        <i class="bi bi-pencil"></i> Edit Profile
                    </button>
                </div>
            </div>
        </div>
        
        <div class="profile-about" id="profileAbout"></div>
        <div class="profile-link" id="profileLinkContainer"></div>
    </div>

    <!-- Stories Grid -->
    <div class="stories-grid-section">
        <div class="section-title">
            <i class="bi bi-grid-3x3"></i> Stories
        </div>
        <div class="stories-grid" id="storiesGrid">
            <div class="loading">Loading stories...</div>
        </div>
    </div>

    <!-- Edit Profile Modal -->
    <div class="modal" id="editModal">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Edit Profile</h2>
                <button class="modal-close" onclick="closeEditProfile()">&times;</button>
            </div>
            
            <form onsubmit="saveProfile(event)">
                <div class="form-group">
                    <label class="form-label">About</label>
                    <textarea 
                        class="form-textarea" 
                        id="aboutInput" 
                        placeholder="Tell us about yourself..."
                        maxlength="150"
                        oninput="updateCharCount(this, 'aboutCount', 150)"></textarea>
                    <div class="char-count">
                        <span id="aboutCount">0</span>/150
                    </div>
                </div>
                
                <div class="form-group">
                    <label class="form-label">Link</label>
                    <input 
                        type="url" 
                        class="form-input" 
                        id="linkInput" 
                        placeholder="https://example.com"
                        maxlength="100">
                </div>
                
                <div class="modal-actions">
                    <button type="button" class="btn btn-secondary" onclick="closeEditProfile()">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Bottom Navigation -->
    <nav class="bottom-nav">
        <button onclick="navigateTo('chats')">
            <i class="bi bi-chat-dots-fill"></i>
            <span class="label">Chat</span>
        </button>
        <button onclick="navigateTo('stories')">
            <i class="bi bi-circle"></i>
            <span class="label">Stories</span>
        </button>
        <button onclick="navigateTo('discover')">
            <i class="bi bi-search"></i>
            <span class="label">Discover</span>
        </button>
        <button onclick="navigateTo('notifications')">
            <i class="bi bi-bell"></i>
            <span class="label">Notifications</span>
        </button>
        <button class="active" onclick="navigateTo('profile')">
            <i class="bi bi-person-fill"></i>
            <span class="label">Profile</span>
        </button>
        <button onclick="navigateTo('settings')">
            <i class="bi bi-gear-fill"></i>
            <span class="label">Settings</span>
        </button>
    </nav>

    <script>
        const currentUser = JSON.parse(localStorage.getItem('user') || '{}');
        const currentUserId = currentUser.id;
        let profileData = null;
        let isOwnProfile = true;

        // Get user ID from URL or use current user
        const urlParams = new URLSearchParams(window.location.search);
        const viewingUserId = urlParams.get('user_id') || currentUserId;
        isOwnProfile = viewingUserId === currentUserId;

        // Load profile on page load
        async function loadProfile() {
            try {
                const response = await fetch(`/api/profile/${viewingUserId}/${currentUserId}`);
                if (response.ok) {
                    profileData = await response.json();
                    renderProfile();
                }
            } catch (error) {
                console.error('Error loading profile:', error);
            }
        }

        function renderProfile() {
            // Update avatar
            document.getElementById('profileAvatar').textContent = 
                (profileData.username || 'U')[0].toUpperCase();
            
            // Update username
            document.getElementById('profileUsername').textContent = 
                `@${profileData.username}`;
            document.getElementById('usernameDisplay').textContent = 
                `@${profileData.username}`;
            
            // Update stats
            document.getElementById('storyCount').textContent = profileData.story_count || 0;
            document.getElementById('followerCount').textContent = profileData.follower_count || 0;
            document.getElementById('followingCount').textContent = profileData.following_count || 0;
            
            // Update about
            if (profileData.about) {
                document.getElementById('profileAbout').textContent = profileData.about;
                document.getElementById('profileAbout').style.display = 'block';
            } else {
                document.getElementById('profileAbout').style.display = 'none';
            }
            
            // Update link
            const linkContainer = document.getElementById('profileLinkContainer');
            if (profileData.profile_link) {
                linkContainer.innerHTML = `
                    <a href="${escapeHtml(profileData.profile_link)}" target="_blank">
                        <i class="bi bi-link-45deg"></i>
                        ${escapeHtml(profileData.profile_link)}
                    </a>
                `;
                linkContainer.style.display = 'block';
            } else {
                linkContainer.style.display = 'none';
            }
            
            // Update action buttons
            const actionsDiv = document.getElementById('profileActions');
            if (isOwnProfile) {
                actionsDiv.innerHTML = `
                    <button class="btn btn-primary" onclick="openEditProfile()">
                        <i class="bi bi-pencil"></i> Edit Profile
                    </button>
                `;
            } else {
                const followBtn = profileData.is_following 
                    ? '<button class="btn btn-secondary" onclick="unfollowUser()">Following</button>'
                    : '<button class="btn btn-primary" onclick="followUser()">Follow</button>';
                actionsDiv.innerHTML = followBtn;
            }
        }

        // Load user's stories
        async function loadStories() {
            try {
                const response = await fetch(`/api/profile/${viewingUserId}/stories`);
                if (response.ok) {
                    const stories = await response.json();
                    renderStories(stories);
                }
            } catch (error) {
                console.error('Error loading stories:', error);
            }
        }

        function renderStories(stories) {
            const grid = document.getElementById('storiesGrid');
            
            if (stories.length === 0) {
                grid.innerHTML = `
                    <div class="empty-state" style="grid-column: 1 / -1;">
                        <i class="bi bi-camera"></i>
                        <p>No stories yet</p>
                    </div>
                `;
                return;
            }
            
            grid.innerHTML = stories.map(story => {
                const mediaElement = story.media_type === 'video'
                    ? `<video src="${story.media_url}"></video>`
                    : `<img src="${story.media_url}" alt="Story">`;
                
                return `
                    <div class="story-grid-item" onclick="openStory('${story.id}')">
                        ${mediaElement}
                        <div class="story-grid-overlay">
                            <div class="story-stats">
                                <span class="story-stat">
                                    <i class="bi bi-eye"></i>
                                    ${story.view_count || 0}
                                </span>
                                <span class="story-stat">
                                    <i class="bi bi-heart"></i>
                                    ${story.like_count || 0}
                                </span>
                                <span class="story-stat">
                                    <i class="bi bi-chat"></i>
                                    ${story.comment_count || 0}
                                </span>
                            </div>
                        </div>
                    </div>
                `;
            }).join('');
        }

        function openStory(storyId) {
            window.location.href = `/stories.html?story_id=${storyId}`;
        }

        // Edit profile functions
        function openEditProfile() {
            if (!isOwnProfile) return;
            
            document.getElementById('aboutInput').value = profileData.about || '';
            document.getElementById('linkInput').value = profileData.profile_link || '';
            updateCharCount(document.getElementById('aboutInput'), 'aboutCount', 150);
            
            document.getElementById('editModal').classList.add('show');
        }

        function closeEditProfile() {
            document.getElementById('editModal').classList.remove('show');
        }

        async function saveProfile(event) {
            event.preventDefault();
            
            const about = document.getElementById('aboutInput').value.trim();
            const link = document.getElementById('linkInput').value.trim();
            
            try {
                const response = await fetch(`/api/profile/${currentUserId}/update`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        about: about || null,
                        profile_link: link || null
                    })
                });
                
                if (response.ok) {
                    closeEditProfile();
                    await loadProfile();
                }
            } catch (error) {
                console.error('Error updating profile:', error);
                alert('Failed to update profile');
            }
        }

        function updateCharCount(input, countId, max) {
            document.getElementById(countId).textContent = input.value.length;
        }

        // Follow/unfollow
        async function followUser() {
            try {
                const response = await fetch(`/api/social/follow/${currentUserId}/${viewingUserId}`, {
                    method: 'POST'
                });
                if (response.ok) {
                    await loadProfile();
                }
            } catch (error) {
                console.error('Error following user:', error);
            }
        }

        async function unfollowUser() {
            try {
                const response = await fetch(`/api/social/unfollow/${currentUserId}/${viewingUserId}`, {
                    method: 'POST'
                });
                if (response.ok) {
                    await loadProfile();
                }
            } catch (error) {
                console.error('Error unfollowing user:', error);
            }
        }

        // Navigation
        function navigateTo(page) {
            const routes = {
                chats: '/basic-chat.html',
                stories: '/stories.html',
                discover: '/discover.html',
                notifications: '/notifications.html',
                profile: '/profile.html',
                settings: '/settings.html'
            };
            if (routes[page]) {
                window.location.href = routes[page];
            }
        }

        function openSettings() {
            window.location.href = '/settings.html';
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        // Close modal on background click
        document.getElementById('editModal').addEventListener('click', (e) => {
            if (e.target.id === 'editModal') {
                closeEditProfile();
            }
        });

        // Initialize
        if (currentUserId && viewingUserId) {
            loadProfile();
            loadStories();
        } else {
            window.location.href = '/login.html';
        }
    </script>
</body>
</html>
