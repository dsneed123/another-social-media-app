# Server Configuration
HOST=0.0.0.0
PORT=3000
CORS_ORIGIN=*

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/relayhub

# JWT Secret (change this in production!)
JWT_SECRET=supersecret_change_in_production

# Redis Configuration
REDIS_URL=redis://127.0.0.1:6379

# Storage Configuration - Cloudflare R2 (S3-Compatible)
# Get your credentials from: https://dash.cloudflare.com/ > R2 > Manage R2 API Tokens
AWS_REGION=auto  # R2 uses 'auto' for region
AWS_ACCESS_KEY_ID=your_r2_access_key_id
AWS_SECRET_ACCESS_KEY=your_r2_secret_access_key
S3_BUCKET_NAME=relayhub-media

# R2 Endpoint (format: https://<account_id>.r2.cloudflarestorage.com)
# Find your account ID in Cloudflare dashboard
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# R2 Public URL (optional, for direct public access)
# Format: https://pub-xxxxx.r2.dev or your custom domain
R2_PUBLIC_URL=https://pub-xxxxx.r2.dev
